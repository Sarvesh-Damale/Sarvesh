<% if(errors) { %>
    <div class="alert alert-danger" role="alert">
        <ul>
  <%  errors.forEach((err) =>{ %>
            <li><%= err.msg %></li>        
    <% }) %>
</ul></div>
    <% } %>

<h1 class="text-center my-3">Register</h1>
<form action="/register" method="post">
    <div class="form-group col-md-4 mx-auto my-2">
        <label for="username">Name</label>
        <input type="text" class="form-control" id="username" name="name" placeholder="Enter Name" required>
      </div>
    <div class="form-group col-md-4 mx-auto my-2">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
    </div>
    <div class="form-group col-md-4 mx-auto my-2">
      <label for="password">Password</label>
      <input type="text" class="form-control" id="password" name="password" placeholder="Password" required>
    </div>
    <div class="form-group col-md-4 mx-auto my-4">
    <button type="submit" class="btn btn-success">Register</button>
  </div>
  </form>
  <h3 class="text-center">Already registered ? <a class="text-success" href="/login">Login</a></h3>
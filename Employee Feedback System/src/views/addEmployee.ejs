<h1 class="text-center my-3">Add Employee</h1>
<form action="/addEmployee" method="post">
    <div class="form-group col-md-4 mx-auto my-2">
        <label for="name">Full Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter first and last name" required>
      </div>
    <div class="form-group col-md-4 mx-auto my-2">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
    </div>
    <div class="form-group col-md-4 mx-auto my-2">
      <label for="doj">Date of Joining</label>
      <input type="date" class="form-control" id="doj" name="doj" placeholder="Enter date of joining" required>
    </div>
    <div class="form-group col-md-4 mx-auto my-4">
    <button type="submit" class="btn btn-success  mx-auto">Add Employee</button>
  </div>
  </form>
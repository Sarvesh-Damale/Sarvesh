      <label for="reviwerEmail">Assignee email</label>
      <input type="email" class="form-control" id="reviwerEmail" name="reviwerEmail" placeholder="Enter assignee email" required>
    </div>
    <div class="form-group col-md-4 mx-auto my-4">
    <button type="submit" class="btn btn-success  mx-auto">Submit</button>
  </div>
  </form>